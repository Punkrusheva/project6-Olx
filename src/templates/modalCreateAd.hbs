<!-- Модалка cоздания объявления -->
<div data-create-ad-modal class="backdrop-modal-create-ad is-hidden">
    <div class="create-ad">
        <form class="create-ad-form">
            <span data-create-ad-modal-close class="close-form"><svg class="close-form-icon" width="14" height="14">
                    <use href="./images/sprite.svg#icon-close_icon"></use>
                </svg></span>

            <p class="create-ad-slogan">
                Додати оголошення
            </p>

            <ul class="create-ad-form-list">
                <li>
                    <label class="create-ad-form-item" for="name"><span class="create-ad-form-label">Назва товару</span>
                        <input class="create-ad-form-input" id='name' name="name" placeholder=" " />
                    </label>
                </li>
                <li>
                    <label class="create-ad-photo">
                        <span class="create-ad-form-label">Фото</span>
                        <ul class="create-ad-photo-list">
                            <li class="create-ad-photo">
                                <input id="photoElem" class="photo-input" type="file" name="imageUrls" multiple
                                    accept="image/*" required />
                                <label for="photoElem"><span class="plus-photo">+</span></label>
                                <img id="output_image" />
                            </li>
                            <li class="create-ad-photo">

                                <label for="photoElem"><span class="plus-photo">+</span></label>
                                <img id="output_image" />
                            </li>
                            <li class="create-ad-photo">

                                <label for="photoElem"><span class="plus-photo">+</span></label>
                                <img id="output_image" />
                            </li>
                            <li class="create-ad-photo">

                                <label for="photoElem"><span class="plus-photo">+</span></label>
                                <img id="output_image" />
                            </li>
                            <li class="create-ad-photo">

                                <label for="photoElem"><span class="plus-photo">+</span></label>
                                <img id="output_image" />
                            </li>
                        </ul>
                    </label>
                </li>
                <li>
                    <label class="create-ad-form-item" for="description"><span class="create-ad-form-label">Опис
                            товару</span>
                        <textarea class="create-ad-form-input" name="description" id="description" cols="10" rows="3"
                            placeholder=" "></textarea>
                    </label>
                </li>
                <li>
                    <label class="create-ad-form-item" for="category"><span class="create-ad-form-label">Категория
                            товару</span>
                        <select class="create-ad-form-input" id="category">
                            <option></option>
                            <option value="property">Нерухомість</option>
                            <option value="transport">Транспорт</option>
                            <option value="work">Робота</option>
                            <option value="electronics">Електроніка</option>
                            <option value="business and services">Бізнес та послуги</option>
                            <option value="recreation and sport">Відпочинок та спорт</option>
                            <option value="free">Віддам безкоштовно</option>
                            <option value="trade">Обмін</option>
                        </select>
                    </label>
                </li>
                <li>
                    <label class="create-ad-form-item" for="price"><span class="create-ad-form-label">Ціна</span>
                        <input class="create-ad-form-input" name="price" id="price" placeholder="0.00 грн" />
                    </label>
                </li>
                <li>
                    <label class="create-ad-form-item" for="phone"><span class="create-ad-form-label">Телефон</span>
                        <input class="create-ad-form-input" name="phone" id="phone" placeholder="+38 (0--) --- -- --" />
                    </label>
                </li>
            </ul>

            <button class="create-ad-submit">
                Додати
            </button>
        </form>
    </div>
</div>