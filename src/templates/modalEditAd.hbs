<div class="backdrop-edit-ad">
    <div class="create-ad">
        <form class="create-ad-form" data-edit-ad-modal-open>
            <span data-edit-ad-modal-close class="close-form"><svg class="close-form-icon" width="14" height="14">
                    <use href="./images/sprite.svg#icon-close_icon"></use>
                </svg></span>
            <p class="create-ad-slogan">
                Редагувати оголошення
            </p>
            {{#each this}}
            <ul class="create-ad-form-list">
                <li class="create-ad-form-item">
                    <label class="create-ad-form-label" for="name">Назва товару</label>
                    <input data-id={{_id}} class="create-ad-form-input" type="text" name="name" id="name"
                        value="{{title}}" />
                </li>
                <li class="create-ad-form-item">
                    <label class="create-ad-form-label" for="photo">Фото</label>
                    <ul class="create-ad-photo-list">
                        <li class="create-ad-photo">
                            <a class="plus-photo">+</a>
                        </li>
                        <li class="create-ad-photo">
                            <a class="plus-photo">+</a>
                        </li>
                        <li class="create-ad-photo">
                            <a class="plus-photo">+</a>
                        </li>
                        <li class="create-ad-photo">
                            <a class="plus-photo">+</a>
                        </li>
                        <li class="create-ad-photo">
                            <a class="plus-photo">+</a>
                        </li>
                        <li class="create-ad-photo">
                            <a class="plus-photo">+</a>
                        </li>
                    </ul>
                </li>
                <li class="create-ad-form-item">
                    <label class="create-ad-form-label" for="description">Опис товару</label>
                    <textarea class="create-ad-form-input" name="description" id="description" cols="10" rows="3"
                        value="{{this.description}}"></textarea>
                </li>
                <li class="create-ad-form-item">
                    <label class="create-ad-form-label" for="category">Категория товару</label>
                    <select class="create-ad-form-input">
                        <option>{{this.category}}</option>
                        <option value="property">Нерухомість</option>
                        <option value="transport">Транспорт</option>
                        <option value="work">Робота</option>
                        <option value="electronics">Електроніка</option>
                        <option value="business and services">Бізнес та послуги</option>
                        <option value="recreation and sport">Відпочинок та спорт</option>
                        <option value="free">Віддам безкоштовно</option>
                        <option value="trade">Обмін</option>
                    </select>
                </li>
                <li class="create-ad-form-item">
                    <label class="create-ad-form-label" for="price">Ціна</label>
                    <input class="create-ad-form-input" type="text" name="price" id="price"
                        value="{{this.price}}.00 грн" />
                </li>
                <li class="create-ad-form-item">
                    <label class="create-ad-form-label" for="phone">Телефон</label>
                    <input class="create-ad-form-input" type="text" name="phone" id="phone" value="phone" />
                </li>

            </ul>
            {{/each}}
            <div class="delete-ad" data-modal-delete>
                <span class="delete-ad-icon"><svg width="14" height="14">
                        <use href="./images/sprite.svg#icon-subtract"></use>
                    </svg></span>
                <p class="delete-ad-slogan">
                    Видалити оголошення
                </p>
            </div>
            <div class="button-save-cancel">
                <button data-edit-ad-modal-save type="submit" class="edit-ad-save">
                    Зберегти
                </button>
                <button data-edit-ad-modal-close type="reset" class="edit-ad-cancel">
                    Відміна
                </button>
            </div>

        </form>
    </div>
</div>